<%- include _header %>

<head>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        function submitForm() {
            let blogForm = document.getElementById('hiddenInput');
            let quillContentsStringified = JSON.stringify(quill.getContents());
            blogForm.value = quillContentsStringified;
        }
    </script>
</head>

<div class="container-fluid">
    <div class="row">
        <div class="center-block">
            <h1> Create a new post </h1>
            <form onsubmit="submitForm()" id="form" class="blog-form" action="/admin/create-post" method="POST">
                <div class="form-control">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="blog-post-title">

                    <div id="editor">

                    </div>
                    <button class="btn" type="submit">Stage Post</button>
                    <script>
                        var quill = new Quill('#editor', {
                            theme: 'snow'
                        });
                    </script>
                    <input id="hiddenInput" type="hidden" name="postBody" value="default" />
                </div>
            </form>

        </div>
    </div>
</div>

<%- include _footer %>