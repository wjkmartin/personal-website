<body>
  <div class="header-main">
    <div class="header-main--left-col">
      <a class="header-main--name" href='/index'>WILL MARTIN</a>
    </div>
    <div class="header-main--right-col">
      <ul class="main-header--nav caps">
        <a href="/about">
          <li class="<%= path==='about' ? 'active main-header--nav-item' : 'main-header--nav-item' %>">about
          </li>
        </a>
        <a href="/blog">
          <li class="<%= path==='blog' ? 'active main-header--nav-item' : 'main-header--nav-item' %>">blog</li>
        </a>
        <a href="/portfolio">
          <li class="<%= path==='portfolio' ? 'active main-header--nav-item' : 'main-header--nav-item' %>">portfolio
          </li>
        </a>
        <a href="/contact">
          <li class="<%= path==='contact' ? 'active main-header--nav-item' : 'main-header--nav-item' %>">contact</li>
        </a>
        
      </ul>
    </div>
    <div class="btn-group small-nav">
      <button type="button" class="btn btn-secondary dropdown-toggle small-nav" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-bars"></i>
      </button>
      <div class="dropdown-menu dropdown-menu-right">
        <a class="dropdown-item" href="/about">about</a>
        <a class="dropdown-item" href="/blog">blog</a>
        <a class="dropdown-item" href="/portfolio">portfolio</a>
        <a class="dropdown-item" href="/contact">contact</a>
