<%- include _header %>

<div class="container-fluid">
  <div class="row" >
    <div class="col"></div>

    <div class="col-4" id="login-col">
      <form method="post">
        <div class="form-group">
          <div id="username-input-container">
            <p id="login-form-label">Account Login</p>
            <label id="username-input-label" for="username-input"> Username </label>
            <input type="text" class="form-control" name="username" id="username-input" aria-describedby="helpId">
          </div> 
          <label id="password-input-label" for="password-input"> Password </label>
          <div id="password-input-container">
            <input type="password" class="form-control" name="password" id="password-input" aria-describedby="helpId">
          </div>
          <div class="form-check form-check-inline">
            <label id="remember-me-group" class="form-check-label">
              <input class="checkbox" type="checkbox" value="checkedValue"> Remember me
            </label>
          </div>
        </div>
        <button id="submit-login" type="submit" class="btn btn-primary">submit</button>
      </form>
    </div>

    <div class="col"></div>
  </div>
</div>
<%- include _footer %>