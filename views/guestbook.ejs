<%- include _header %>

<div class="container-fluid">
    <div class="row">
        <div class="col-middle">
            <div class="form-group">
                <form>
                    <div class="form-group">
                        <label for="guest-book--input-name">Your lovely name</label>
                        <input type="text" class="form-control" id="guest-book--input-name" aria-describedby="emailHelp"
                            placeholder="e.g. Will Martin">
                        <small id="guestBookHelp" class="form-text text-muted">Your name and message will be publicly
                            viewable.</small>
                    </div>
                    <div class="form-group">
                        <label for="guestBook">Your message to the world</label>
                        <input type="text" class="form-control" id="guest-book--input-message"
                            placeholder="e.g. I love lamp.">
                        <small id="guestBookHelp" class="form-text text-muted">Your message can include a link to a
                            website or an image.</small>
                    </div>
                    <button type="submit" class="btn btn-primary button--submit">Sign</button>
                </form>
            </div>
            <div>
                <!-- put the posted stuff here -->
            </div>
        </div>
    </div>
</div>

<%- include _footer %>